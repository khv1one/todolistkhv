# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                           controllers.HomeController.index

GET     /todolist/api/users                         controllers.UserController.getUsers
POST    /todolist/api/users/addUser                 controllers.UserController.addUser

GET     /todolist/api/tasks                         controllers.TaskController.getTasks
POST    /todolist/api/tasks/addTask                 controllers.TaskController.addTask
GET     /todolist/api/tasks/user/:id                controllers.TaskController.getTasksByUserId(id: Long)
GET     /todolist/api/tasks/user/name/:name         controllers.TaskController.getTasksByUserName(name: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
